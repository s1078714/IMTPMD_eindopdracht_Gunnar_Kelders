<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.s1078714.desleutelaar.ipInvoeren"

    >

    <EditText
        android:id="@+id/ipInvoer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:hint="IP adres"
        android:layout_alignStart="@+id/textView6"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/textView5"
        android:layout_alignEnd="@+id/textView6" />

    <Button
        android:id="@+id/ipKnop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start App"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/ipInvoer"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/mariologo"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welkom bij Mario&amp;Co"
        android:id="@+id/textView6"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Om gebruik te kunnen maken van de Mario&amp;Co app moet u het IP adres van de server ingeven."
        android:id="@+id/textView5"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
