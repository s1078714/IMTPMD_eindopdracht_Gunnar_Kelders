<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.s1078714.desleutelaar.InfoScherm">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:layout_alignParentStart="true"
        android:src="@drawable/border"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true" />

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/infoSlotNaam"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:layout_gravity="center_horizontal|top" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/infoVeld"
        android:layout_gravity="center_horizontal|top"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/infoSlotNaam"
        android:layout_alignEnd="@+id/infoSlotNaam"
        android:layout_marginLeft="100px"
        android:layout_marginRight="-200px"
        android:layout_marginTop="150px" />

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginTop="500px">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terug"
            android:id="@+id/annuleer"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="140px" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aanvragen"
            android:id="@+id/bestel"
            android:layout_gravity="right|center_vertical"
            android:layout_marginLeft="140px" />
    </TableRow>

</RelativeLayout>
